<div class="text-align">
  <%= simple_form_for review, url: carrefour_box_review_path(carrefour_box.id, review.id) do |f| %>
    <%= f.input :content, label: false %>
    <%= f.input :rating, collection: (1..5).to_a, label: "Avalie sua experiência", class: 'review_form' %>
    <%= f.submit "Reenviar comentário", class: 'btn btn-dark w-50 mt-2' %>
  <% end %>
</div>
