<div class="container justify-content-center">
  <h1 class="text-center pb-3">Suas caixas</h1>
  <% @plans.each do |plan| %>
    <div class="row d-flex justify-content-center">
      <div class="card text-dark bg-light mb-3">
        <div class="text-center card-header">
          <%= "#{plan[:plan].category} - #{humanized_money_with_symbol plan[:plan].price} (inÃ­cio: #{plan[:plan].created_at.strftime("%d/%m/%Y")})" %>
        </div>
        <div class="card-body">
          <% plan[:boxes].each do |box, items| %>
            <h5 class="card-title"><%= box %></h5>
            <ul>
              <div class="row">
                <% items.each do |item| %>
                  <div class="col-6">
                    <li class="card-text"><%= item %></li>
                  </div>
                <% end %>
              </div>
            </ul>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>
