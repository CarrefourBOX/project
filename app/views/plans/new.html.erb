<div class="container">
  <h1 class='text-center pb-3'>Selecione suas preferÃªncias</h1>

  <%= form_with(url: plans_path, local: true, html: {class: 'd-flex row row-cols-lg-auto g-3 align-items-center', 'data-turbo': false }) do %>
    <div class="col-12">
      <% @boxes.each do |box, items| %>
        <%= field_set_tag do %>
          <h3>Box <%= box.name %></h3>
          <% items.each do |item| %>
            <div class="form-check">
              <%= check_box_tag "boxes[#{box.name}][items][]", item.id, false, class: 'form-check-input' %>
              <%= label_tag "boxes[#{box.name}]", item.name, class:'form-check-label' %>
            </div>
          <% end %>
          <div class="pb-3">
            <%= select_tag "boxes[#{box.name}][box_size]", options_for_select(box.plans.keys), class: 'form-select', prompt: 'selecione um tamanho' %>
          </div>
        <% end %>
        <hr>
      <% end %>
      <div class="pb-3">
        <%# text_field_tag "CEP", params[:CEP], required: true, class: 'form-control', placeholder: 'CEP' %>
      </div>
      <%= submit_tag 'Assinar', class: 'btn btn-dark w-100' %>
    </div>
  <% end %>
</div>
