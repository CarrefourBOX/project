<div class="container">
  <div class="box-card" style="background-color: <%= @carrefour_box.color %>">
    <div class="d-flex">
      <div class="col-2 d-flex align-items-center justify-content-center">
        <%= cl_image_tag @carrefour_box.icon.key, width: 35, class:'me-3' %>
      </div>
      <div class="col ms-1">
        <div class="row pb-0 d-flex justify-content-between align-items-center">
          <div class="col-3">
            <span>Box</span>
          </div>
          <div class="col-8 d-flex justify-content-end card-price">
            <span>R$ <%= @carrefour_box.plans['P']['price'].to_s.insert(-3, ',') %>*</span>
          </div>
        </div>
        <div class="row">
          <span class="fs-3"><%= @carrefour_box.name %></span>
        </div>
      </div>
    </div>

    <div class='box-show-description'>
      <p><%= @carrefour_box.description %></p>
    </div>
    <div class="row box-card-footer">
      <span>*Valor referente ao BOX pequeno</span>
    </div>
  </div>
  <div id="reviews">
    <p class="m-4 box-show-stars text-center">Avaliações:
      <% (@carrefour_box.average_rating.to_i).times do %>
        <i class="fas fa-star"></i>
      <% end %>
      <% (5 - @carrefour_box.average_rating.to_i).times do %>
        <i class="far fa-star"></i>
      <% end %>
      (<%= @carrefour_box.average_rating %> de 5.0)
    </p>
    <% @carrefour_box.reviews.each do |review| %>
      <p><%= render 'reviews/review', review: review %></p>
    <% end %>
  </div>
  <div class="img-ruler"></div>
</div>
